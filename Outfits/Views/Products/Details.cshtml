@model Outfits.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="col-sm-6">
    <div class="card">
        <img src="@("~/image/"+ Model.ImageName)" class="card-img-top" asp-append-version="true" />
        <div class="card-body">
            <h5 class="card-title">Pavadinimas - @Html.DisplayFor(model => @model.Name)</h5>
            <p class="card-text">Aprašymas - @Html.DisplayFor(model => @model.Description)</p>
            <p>Kaina - @Html.DisplayFor(model => model.Price) €</p>
        </div>
        @*<div class="card-footer">
                <small class="text-muted">@Html.DisplayFor(model => model.Likes)</small>
            </div>*@
    </div>
    <div class="row">
        <div class="m-3">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Redaguoti</a>
        </div>
        <div class="m-3">
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Ištrinti</a>
        </div>
        <div class="m-3">
            <a asp-action="Index">Grįžti į sąrašą</a>
        </div>

    </div>
</div>


