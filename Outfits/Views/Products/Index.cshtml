@model IEnumerable<Outfits.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Parduotuvė</h1>

<p>
    <a asp-action="Create">Įkelti naują prekę</a>
</p>
<div class="card-columns">
    @foreach (var item in Model)
    {
        <div class="col mb-4">
            <div class="card">
                <a asp-action="Details" asp-route-id="@item.Id"><img src="@("~/image/" + item.ImageName)" class="card-img-top" asp-append-version="true" /></a>
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Price)</p>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Likes)</p>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.IsInCart)</p>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.IsInWishList)</p>


                    <a @Html.ActionLink("Prideti i krepseli", "AddToCart", new { id = item.Id })></a>
                    <a @Html.ActionLink("Like", "Like", new { id = item.Id })></a>
                    <a @Html.ActionLink("Dislike", "Dislike", new { id = item.Id })></a>
                    <a @Html.ActionLink("Prideti i noru sarasa", "AddToWishList", new { id = item.Id })></a>
                </div>
                @*<div class="card-footer">
                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Likes)</small>
                </div>*@
            </div>

        </div>
    }
</div>


