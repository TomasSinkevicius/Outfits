@model Outfits.Models.OutfitPost

@{
    ViewData["Title"] = "Details";
}

<div class="col-sm-6">
    <div class="card">
        <img src="@("~/image/"+ Model.ImageName)" class="card-img-top" asp-append-version="true" />
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(model => @model.username)</h5>
            <p class="card-text">@Html.DisplayFor(model => @model.Description)</p>
        </div>
        <div class="card-footer">
            <small class="text-muted">@Html.DisplayFor(model => @model.Product1) @Html.DisplayFor(model => @model.Product2) @Html.DisplayFor(model => @model.Product3)</small>
        </div>
    </div>
</div>
<div class="row">
    <div class="m-2">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Redaguoti</a>
    </div>
    <div class="m-2">
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Ištrinti</a>
    </div>
    <div class="m-2">
        <a asp-action="Index">Grįžti į sąrašą</a>
    </div>

</div>
