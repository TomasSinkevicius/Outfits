@model Outfits.Models.Item

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<div class="col-sm-6">
        <div class="card">
            <img src="@("~/image/"+ Model.ImageName)" class="card-img-top" asp-append-version="true" />
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayNameFor(model => model.Name)</h5>
                <p class="card-text">@Html.DisplayNameFor(model => model.Description)</p>
                <p>@Html.DisplayFor(model => model.Price) €</p>
            </div>
            @*<div class="card-footer">
                <small class="text-muted">@Html.DisplayFor(model => model.Likes)</small>
            </div>*@
        </div>
</div>
<div class="row">
    <div class="m-2">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Redaguoti</a>
    </div>
    <div class="m-2">
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Ištrinti</a>
    </div>
    <div class="m-2">
        <a asp-action="Index">Grįžti į sąrašą</a>
    </div>
   
</div>

